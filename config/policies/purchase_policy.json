{
  "policyId": "purchase_policy_v1",
  "policyName": "Purchase Approval Policy",
  "effectiveDate": "2024-01-01T00:00:00Z",
  "version": "1.0",
  "department": "Procurement",
  "rules": [
    {
      "id": "rule_1",
      "condition": "amount <= 500",
      "action": "auto_approve",
      "confidenceThreshold": 0.9,
      "priority": "high"
    },
    {
      "id": "rule_2", 
      "condition": "500 < amount <= 5000",
      "action": "manager_approval",
      "confidenceThreshold": 0.8,
      "priority": "normal"
    },
    {
      "id": "rule_3",
      "condition": "amount > 5000",
      "action": "executive_approval", 
      "confidenceThreshold": 0.7,
      "priority": "normal"
    }
  ],
  "escalationTriggers": [
    {
      "condition": "confidence_score < 0.7",
      "action": "human_review"
    },
    {
      "condition": "vendor_not_approved",
      "action": "procurement_review"
    },
    {
      "condition": "budget_exceeded",
      "action": "finance_review"
    }
  ]
}
