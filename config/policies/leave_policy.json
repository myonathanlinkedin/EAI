{
  "policyId": "leave_policy_v1",
  "policyName": "Leave Approval Policy",
  "effectiveDate": "2024-01-01T00:00:00Z",
  "version": "1.0",
  "department": "HR",
  "rules": [
    {
      "id": "rule_1",
      "condition": "days <= 5",
      "action": "auto_approve",
      "confidenceThreshold": 0.9,
      "priority": "high"
    },
    {
      "id": "rule_2", 
      "condition": "5 < days <= 15",
      "action": "manager_approval",
      "confidenceThreshold": 0.8,
      "priority": "normal"
    },
    {
      "id": "rule_3",
      "condition": "days > 15",
      "action": "executive_approval", 
      "confidenceThreshold": 0.7,
      "priority": "normal"
    }
  ],
  "escalationTriggers": [
    {
      "condition": "confidence_score < 0.7",
      "action": "human_review"
    },
    {
      "condition": "peak_season_detected",
      "action": "escalate_to_manager"
    },
    {
      "condition": "excessive_leave_pattern",
      "action": "hr_review"
    }
  ]
}
